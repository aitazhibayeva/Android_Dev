<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <ImageView
            android:id="@+id/backButton"
            android:layout_marginTop="10dp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/baseline_arrow_back"
            android:onClick="goBack"
            />
        <ImageView
            android:id="@+id/pizza_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginLeft="30dp"
            tools:srcCompat = "@drawable/baseline_local_pizza"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="35dp">
        <TextView
            android:id="@+id/pizza_title"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            tools:text="Pizza Name"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/info_icon" />
    </LinearLayout>

    <TextView
        android:id="@+id/pizza_short_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="information about pizza size"
        android:fontFamily="sans-serif-medium"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/pizza_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Pizza Description"
        android:fontFamily="sans-serif-medium"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/remove_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove ingredients"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/orange"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/button_Lite"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:backgroundTint="@android:color/transparent"
            android:elevation="2dp"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:text="Lite"
            android:textColor="@color/black"
            android:clipToOutline="false"

            />

        <Button
            android:id="@+id/button_Medium"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Medium"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:backgroundTint="@android:color/transparent"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:clipToOutline="false"/>

        <Button
            android:id="@+id/button_High"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="High"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:backgroundTint="@android:color/transparent"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:clipToOutline="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <Button
            android:id="@+id/button_Traditional"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Traditional"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:backgroundTint="@android:color/transparent"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:clipToOutline="false"/>

        <Button
            android:id="@+id/button_Thin"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Thin"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:backgroundTint="@android:color/transparent"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:clipToOutline="false"/>

    </LinearLayout>

    <TextView
        android:id="@+id/pizza_some_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Add to taste"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"/>

    <Button
        android:id="@+id/cost"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:backgroundTint="#FF6E00"
        android:elevation="4dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        tools:text="TO CART FOR 2 900 â‚¸"
        />
</LinearLayout>